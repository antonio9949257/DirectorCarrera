    <div>
        <h4 class="my-4">Tutor</h4>
        <hr />
        <dl class="row mt-3">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.NombreCompleto)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Especialidad)
            </dt>
            <dd class = "col-sm-10">
