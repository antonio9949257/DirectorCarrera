@model SistemaTitulos.Models.Solicitud

@{
    ViewData["Title"] = "Detalles de la Solicitud";
}

<div class="container mt-4">
    <h1 class="my-4">Detalles de la Solicitud</h1>

    <div>
        <h4 class="my-4">Solicitud</h4>
        <hr />
        <dl class="row mt-3">
            <dt class = "col-sm-3">
                @Html.DisplayNameFor(model => model.NombreEstudiante)
            </dt>
            <dd class = "col-sm-9">
                @Html.DisplayFor(model => model.NombreEstudiante)
            </dd>
            <dt class = "col-sm-3">
                @Html.DisplayNameFor(model => model.Carrera)
            </dt>
            <dd class = "col-sm-9">
                @Html.DisplayFor(model => model.Carrera)
            </dd>
            <dt class = "col-sm-3">
                @Html.DisplayNameFor(model => model.FechaSolicitud)
            </dt>
            <dd class = "col-sm-9">
                @Html.DisplayFor(model => model.FechaSolicitud)
            </dd>
            <dt class = "col-sm-3">
                @Html.DisplayNameFor(model => model.NombreProyecto)
            </dt>
            <dd class = "col-sm-9">
                @Html.DisplayFor(model => model.NombreProyecto)
            </dd>
            <dt class = "col-sm-3">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class = "col-sm-9">
                @Html.DisplayFor(model => model.Estado)
            </dd>
            <dt class = "col-sm-3">
                @Html.DisplayNameFor(model => model.CalificacionFinal)
            </dt>
            <dd class = "col-sm-9">
                @Html.DisplayFor(model => model.CalificacionFinal)
            </dd>
            <dt class = "col-sm-3">
                @Html.DisplayNameFor(model => model.Tutor)
            </dt>
            <dd class = "col-sm-9">
                @Html.DisplayFor(model => model.Tutor.NombreCompleto)
            </dd>
            <dt class="col-sm-3">
                Tribunal Calificador
            </dt>
            <dd class="col-sm-9">
                <ul>
                    @foreach (var miembro in Model.MiembrosTribunal)
                    {
                        <li>@Html.DisplayFor(modelItem => miembro.NombreCompleto)</li>
                    }
                </ul>
            </dd>
        </dl>
    </div>
    <div class="mt-3">
        <a asp-action="GenerarActaPDF" asp-route-id="@Model.Id" class="btn btn-primary">Generar Acta</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Editar</a> 
        <a asp-action="Index" class="btn btn-light">Volver al Listado</a>
    </div>
</div>
