@model SistemaTitulos.Models.AsignacionTribunalViewModel
@using SistemaTitulos.Models // Add this using statement

@{
    ViewData["Title"] = "Editar Solicitud y Asignar Tribunal";
    var estados = new List<SelectListItem>
    {
        // Estados del Proceso de Modalidad de Graduación (Principales)
        new SelectListItem { Value = SolicitudEstados.Pendiente, Text = $"{SolicitudEstados.Pendiente}: Solicitud recién registrada, aún no revisada." },
        new SelectListItem { Value = SolicitudEstados.Observada, Text = $"{SolicitudEstados.Observada}: Solicitud revisada con errores o datos incompletos." },
        new SelectListItem { Value = SolicitudEstados.Aceptada, Text = $"{SolicitudEstados.Aceptada}: Solicitud aprobada formalmente (inicio del proceso)." },
        new SelectListItem { Value = SolicitudEstados.TutorAsignado, Text = $"{SolicitudEstados.TutorAsignado}: Se designó un tutor activo y el registro quedó validado." },
        new SelectListItem { Value = SolicitudEstados.TribunalAsignado, Text = $"{SolicitudEstados.TribunalAsignado}: Se conformó el tribunal calificador y se generó el acta." },
        new SelectListItem { Value = SolicitudEstados.EnProgreso, Text = $"{SolicitudEstados.EnProgreso}: El estudiante está desarrollando su proyecto." },
        new SelectListItem { Value = SolicitudEstados.EnEvaluacionDefensaProgramada, Text = $"{SolicitudEstados.EnEvaluacionDefensaProgramada}: La defensa está agendada, pendiente de calificación." },
        new SelectListItem { Value = SolicitudEstados.Finalizado, Text = $"{SolicitudEstados.Finalizado}: Se registró la nota final, se cerró el proceso." },
        new SelectListItem { Value = SolicitudEstados.Archivado, Text = $"{SolicitudEstados.Archivado}: El proceso fue cerrado y almacenado en el histórico." },

        // Estados internos de cada Historia de Usuario (funcionalidades específicas)
        new SelectListItem { Value = SolicitudEstados.Borrador, Text = $"{SolicitudEstados.Borrador}: Solicitud en creación, no enviada." },
        new SelectListItem { Value = SolicitudEstados.SinTutor, Text = $"{SolicitudEstados.SinTutor}: No se ha asignado un tutor." },
        new SelectListItem { Value = SolicitudEstados.TutorPendiente, Text = $"{SolicitudEstados.TutorPendiente}: Tutor propuesto, pendiente de confirmación." },
        new SelectListItem { Value = SolicitudEstados.SinTribunal, Text = $"{SolicitudEstados.SinTribunal}: No se ha asignado un tribunal." },
        new SelectListItem { Value = SolicitudEstados.TribunalIncompleto, Text = $"{SolicitudEstados.TribunalIncompleto}: Tribunal asignado, pero faltan miembros o roles." },
        new SelectListItem { Value = SolicitudEstados.SinAvance, Text = $"{SolicitudEstados.SinAvance}: No se han registrado avances del proyecto." },
        new SelectListItem { Value = SolicitudEstados.EnSeguimiento, Text = $"{SolicitudEstados.EnSeguimiento}: El proyecto está en seguimiento, con avances." },
        new SelectListItem { Value = SolicitudEstados.ConAvancesActualizados, Text = $"{SolicitudEstados.ConAvancesActualizados}: Avances del proyecto actualizados recientemente." },
        new SelectListItem { Value = SolicitudEstados.EnEvaluacion, Text = $"{SolicitudEstados.EnEvaluacion}: El proyecto está siendo evaluado por el tribunal." },
        new SelectListItem { Value = SolicitudEstados.Calificada, Text = $"{SolicitudEstados.Calificada}: El proyecto ha sido calificado." }
    };
}

<div class="container mt-4">
    <h1 class="my-4">@ViewData["Title"]</h1>

    <h4 class="my-4">Solicitud</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Solicitud.Id" />

                <div class="form-group mb-3">
                    <label asp-for="Solicitud.NombreEstudiante" class="control-label"></label>
                    <input asp-for="Solicitud.NombreEstudiante" class="form-control" />
                    <span asp-validation-for="Solicitud.NombreEstudiante" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Solicitud.Carrera" class="control-label"></label>
                    <input asp-for="Solicitud.Carrera" class="form-control" />
                    <span asp-validation-for="Solicitud.Carrera" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Solicitud.FechaSolicitud" class="control-label"></label>
                    <input asp-for="Solicitud.FechaSolicitud" class="form-control" type="date" />
                    <span asp-validation-for="Solicitud.FechaSolicitud" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Solicitud.NombreProyecto" class="control-label"></label>
                    <input asp-for="Solicitud.NombreProyecto" class="form-control" />
                    <span asp-validation-for="Solicitud.NombreProyecto" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Solicitud.Estado" class="control-label"></label>
                    <select asp-for="Solicitud.Estado" class="form-control" asp-items="estados"></select>
                    <span asp-validation-for="Solicitud.Estado" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Solicitud.TutorId" class="control-label"></label>
                    <select asp-for="Solicitud.TutorId" class="form-control" asp-items="ViewBag.TutorId">
                        <option value="">-- No Asignado --</option>
                    </select>
                    <span asp-validation-for="Solicitud.TutorId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Solicitud.CalificacionFinal" class="control-label"></label>
                    <input asp-for="Solicitud.CalificacionFinal" class="form-control" type="number" step="0.01" min="0" max="100" />
                    <span asp-validation-for="Solicitud.CalificacionFinal" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Tribunal Calificador</label>
                    <div class="col-md-10">
                        @for (int i = 0; i < Model.MiembrosDisponibles.Count; i++)
                        {
                            <div class="form-check">
                                <input type="hidden" asp-for="@Model.MiembrosDisponibles[i].Id" />
                                <input type="hidden" asp-for="@Model.MiembrosDisponibles[i].NombreCompleto" />
                                <input type="checkbox" asp-for="@Model.MiembrosDisponibles[i].Asignado" class="form-check-input" />
                                <label class="form-check-label">@Model.MiembrosDisponibles[i].NombreCompleto</label>
                            </div>
                        }
                    </div>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
