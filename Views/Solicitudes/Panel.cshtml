@model IEnumerable<SistemaTitulos.Models.Solicitud>

@{
    ViewData["Title"] = "Panel de Seguimiento de Avances";
}

<div class="container mt-4">
    <h1 class="my-4">@ViewData["Title"]</h1>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Filtrar Solicitudes</h5>
            <form asp-action="Panel" method="get">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label for="searchString" class="control-label">Nombre Estudiante</label>
                            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label for="tutorId" class="control-label">Tutor</label>
                            <select name="tutorId" asp-items="ViewBag.TutorIdFilter" class="form-control">
                                <option value="">Todos</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label for="estado" class="control-label">Estado</label>
                            <select name="estado" asp-items="ViewBag.EstadoFilter" class="form-control">
                                <option value="">Todos</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2 align-self-end">
                        <div class="form-group mt-3">
                            <input type="submit" value="Filtrar" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NombreEstudiante)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carrera)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreProyecto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tutor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CalificacionFinal)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreEstudiante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Carrera)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreProyecto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tutor.NombreCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CalificacionFinal)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
