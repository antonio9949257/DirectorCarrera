@model SistemaTitulos.Models.PanelViewModel

@{
    ViewData["Title"] = "Panel de Seguimiento de Avances";
}

<div class="container mt-4">
    <h1 class="my-4">@ViewData["Title"]</h1>

    <div class="row mb-4">
        @foreach (var entry in Model.SolicitudCountsByEstado)
        {
            <div class="col-md-3 mb-3">
                <div class="card text-white 
                    @(entry.Key == SolicitudEstados.Finalizado ? "bg-success" :
                      entry.Key == SolicitudEstados.Archivado ? "bg-secondary" :
                      entry.Key == SolicitudEstados.Observada ? "bg-warning" :
                      entry.Key == SolicitudEstados.Pendiente ? "bg-info" :
                      "bg-primary")">
                    <div class="card-body">
                        <h5 class="card-title text-white">@entry.Key</h5>
                        <p class="card-text display-4 text-white">@entry.Value</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="card mb-4 bg-dark text-white">
        <div class="card-body">
            <h5 class="card-title">Filtrar Solicitudes</h5>
            <form asp-action="Panel" method="get">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label for="searchString" class="control-label">Nombre Estudiante</label>
                            <input type="text" name="searchString" value="@Model.SearchString" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label for="tutorId" class="control-label">Tutor</label>
                            <select name="tutorId" asp-items="Model.TutorIdFilter" class="form-control">
                                <option value="">Todos</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label for="estado" class="control-label">Estado</label>
                            <select name="estado" asp-items="Model.EstadoFilter" class="form-control">
                                <option value="">Todos</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2 align-self-end">
                        <div class="form-group mt-3">
                            <input type="submit" value="Filtrar" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <table class="table table-striped table-hover text-white">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Solicitudes.FirstOrDefault().NombreEstudiante)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Solicitudes.FirstOrDefault().Carrera)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Solicitudes.FirstOrDefault().NombreProyecto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Solicitudes.FirstOrDefault().Tutor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Solicitudes.FirstOrDefault().Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Solicitudes.FirstOrDefault().CalificacionFinal)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Solicitudes) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreEstudiante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Carrera)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreProyecto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tutor.NombreCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CalificacionFinal)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary me-1">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger me-1">Eliminar</a>
                    @if (item.TutorId != null)
                    {
                        <a asp-action="GenerarActaDesignacionTutorPDF" asp-route-id="@item.Id" class="btn btn-sm btn-success" target="_blank">Acta Tutor</a>
                    }
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
